{
    "name": "vscode-template-literal-editor",
    "displayName": "Template Literal Editor",
    "description": "Use ctrl+enter to open ES6 template literals and other configured multi-line strings in any language in a synced editor, with language support (HTML, CSS, SQL, shell etc).",
    "icon": "icon.png",
    "version": "0.6.0",
    "publisher": "plievone",
    "license": "MIT",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:editor.openSubdocument",
        "onCommand:editor.openSubdocument.named"
    ],
    "main": "./lib/extension",
    "contributes": {
        "commands": [
            {
                "command": "editor.openSubdocument",
                "title": "Template Literal Editor: Open Literal String as a Subdocument"
            },
            {
                "command": "editor.openSubdocument.named",
                "title": "Template Literal Editor: (named variant) Open Literal String as a Subdocument"
            },
            {
                "command": "editor.closeSubdocuments",
                "title": "Template Literal Editor: Close All Subdocuments"
            }
        ],
        "keybindings": [
            {
                "command": "editor.openSubdocument",
                "key": "ctrl+enter",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.openSubdocument.named",
                "key": "ctrl+shift+enter",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.closeSubdocuments",
                "key": "ctrl+backspace",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.closeSubdocuments",
                "key": "ctrl+shift+backspace",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Template Literal Editor configuration",
            "properties": {
                "templateLiteralEditor.regexes": {
                    "type": "object",
                    "default": {
                        "coffeescript": "(\"\"\")([\\s\\S]*?)(\"\"\")",
                        "python": "(\"\"\")([\\s\\S]*?)(\"\"\")"
                    },
                    "description": "Language-specific regular expressions for capturing template literals or other multi-line strings for editing. Each regexp must be in an escaped string form and must provide exactly three capture groups without gaps: begin, content, end. JavaScript and TypeScript default to language parsing instead of regexp matching, so only define them when you have a specific need.",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "dev": "tsc -w -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install && tsc -p ./"
    },
    "dependencies": {
        "lodash.throttle": "4.1.1",
        "typescript": "^2.2.1"
    },
    "devDependencies": {
        "@types/lodash.throttle": "^4.1.2",
        "@types/node": "^6.0.40",
        "vscode": "^1.0.0"
    }
}