{
    "name": "vscode-template-literal-editor",
    "displayName": "ES6 Template Literal Editor",
    "description": "Use ctrl+enter to open ES6 template literals in a new editor with language support (HTML, CSS, SQL etc).",
    "icon": "icon.png",
    "version": "0.4.1",
    "publisher": "plievone",
    "license": "MIT",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:editor.openSubdocument",
        "onCommand:editor.openSubdocument.named"
    ],
    "main": "./lib/extension",
    "contributes": {
        "commands": [
            {
                "command": "editor.openSubdocument",
                "title": "ES6 Template Literal Editor: Open ES6 Template Literal as a Subdocument"
            },
            {
                "command": "editor.openSubdocument.named",
                "title": "ES6 Template Literal Editor: (named variant) Open ES6 Template Literal as a Subdocument"
            },
            {
                "command": "editor.closeSubdocuments",
                "title": "ES6 Template Literal Editor: Close All Subdocuments"
            }
        ],
        "keybindings": [
            {
                "command": "editor.openSubdocument",
                "key": "ctrl+enter",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.openSubdocument.named",
                "key": "ctrl+shift+enter",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.closeSubdocuments",
                "key": "ctrl+backspace",
                "when": "editorTextFocus"
            },
            {
                "command": "editor.closeSubdocuments",
                "key": "ctrl+shift+backspace",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "dev": "tsc -w -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install && tsc -p ./"
    },
    "dependencies": {
        "lodash.throttle": "4.1.1",
        "typescript": "^2.2.1"
    },
    "devDependencies": {
        "@types/lodash.throttle": "^4.1.2",
        "@types/node": "^6.0.40",
        "vscode": "^1.0.0"
    }
}